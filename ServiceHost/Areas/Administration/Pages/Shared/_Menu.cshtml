@using _0_Framework.Infrastructure
@inject _0_Framework.Application.IAuthHelper AuthHelper;
@{
    var currentAccount = AuthHelper.CurrentAccountInfo();
}
<div class="left side-menu">
    <div class="sidebar-inner slimscrollleft">
        <div class="user-details">
            <div class="pull-right">
                <img src="~/ProductPictures/@currentAccount.ProfilePhoto" class="thumb-md img-circle" />
            </div>
            <div class="user-info">
                <div class="dropdown">
                    <a asp-page="/Index" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">@currentAccount.Fullname<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="javascript:void(0)"><i class="md md-face-unlock"></i> Profile<div class="ripple-wrapper"></div></a></li>
                        <li><a href="javascript:void(0)"><i class="md md-settings"></i> Settings</a></li>
                        <li><a href="javascript:void(0)"><i class="md md-lock"></i> Lock screen</a></li>
                        <li><a href="javascript:void(0)"><i class="md md-settings-power"></i> Logout</a></li>
                    </ul>
                </div>

                <p class="text-muted m-0">@currentAccount.Role</p>
            </div>
        </div>
        <!--- Divider -->
        <div id="sidebar-menu">
            <ul>
                <li>
                    <a asp-page="/Index" class="waves-effect active"><i class="md md-home"></i><span>داشبورد</span></a>
                </li>
                <li>
                    <a asp-page="/Comments/Index" class="waves-effect"><i class="md md-comment"></i><span>کامنت‌ها</span></a>
                </li>
                @if (AuthHelper.CurrentAccountRole() == Roles.Administrator)
                {
                    <li>
                        <a asp-page="/Inventory/Index" class="waves-effect"><i class="md md-storage"></i><span>انبارداری</span></a>
                    </li>
                    <li>
                        <a asp-page="/Shop/Orders/Index" class="waves-effect"><i class="md md-storage"></i><span>سفارشات</span></a>
                    </li>
                    <li class="has_sub">
                        <a class="waves-effect"><i class="md md-shopping-cart"></i><span> فروشگاه </span><span class="pull-right"><i class="md md-add"></i></span></a>
                        <ul class="list-unstyled">
                            <li><a asp-page="/Shop/Slides/Index">اسلایدر</a></li>
                            <li><a asp-page="/Shop/ProductCategories/Index">گروه محصولات</a></li>
                            <li><a asp-page="/Shop/Products/Index">محصولات</a></li>
                            <li><a asp-page="/Shop/ProductPictures/Index">عکس محصولات</a></li>

                        </ul>
                    </li>
                    <li class="has_sub">
                        <a class="waves-effect"><i class="fa fa-money"></i><span>سیستم تخفیفات</span><span class="pull-right"><i class="md md-add"></i></span></a>
                        <ul class="list-unstyled">
                            <li><a asp-page="/Discounts/CustomerDiscounts/Index">تخفیف مشتری</a></li>
                            <li><a asp-page="/Discounts/ColleagueDiscounts/Index">تخفیف همکاری</a></li>
                        </ul>
                    </li>
                    <li class="has_sub">
                        <a class="waves-effect"><i class="md md-account-circle"></i><span>سیستم کاربران</span><span class="pull-right"><i class="md md-add"></i></span></a>
                        <ul class="list-unstyled">
                            <li><a asp-page="/Accounts/Account/Index">کاربران</a></li>
                            <li><a asp-page="/Accounts/Role/Index">نقش‌ها</a></li>
                        </ul>
                    </li>
                }
                <li class="has_sub">
                    <a class="waves-effect"><i class="fa fa-file-text"></i><span>سیستم بلاگینگ</span><span class="pull-right"><i class="md md-add"></i></span></a>
                    <ul class="list-unstyled">
                        <li><a asp-page="/Blog/Articles/Index">مقالات</a></li>
                        <li><a asp-page="/Blog/ArticleCategories/Index">گروه مقالات</a></li>
                    </ul>
                </li>
                <li>
                    <a asp-page="/Account" asp-page-handler="Logout" class="waves-effect"><i class="fa fa-sign-out"></i><span>خروج</span></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>